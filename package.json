{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "beszel",
  "title": "Beszel",
  "description": "Integrate the opensource monitoring solution Beszel into Raycast",
  "icon": "extension-icon.png",
  "author": "janbiasi",
  "external": [
    "pocketbase"
  ],
  "categories": [
    "Applications",
    "Developer Tools"
  ],
  "license": "MIT",
  "preferences": [
    {
      "title": "Host",
      "name": "host",
      "required": true,
      "type": "textfield",
      "description": "Host URL of the Beszel Instance",
      "placeholder": "https://beszel.your-domain.com"
    },
    {
      "title": "API Token",
      "name": "token",
      "required": true,
      "type": "password",
      "description": "API token for Beszels pocketbase backend",
      "placeholder": "Enter your JWT token"
    },
    {
      "title": "Formatter Locale",
      "name": "formatterLocale",
      "required": false,
      "type": "textfield",
      "description": "Locale configuration for Intl formatters like date and time, see https://developer.mozilla.org/en-US/docs/Web/JavaScript/Reference/Global_Objects/Intl for available options",
      "default": "en"
    },
    {
      "title": "Default Interval",
      "name": "defaultInterval",
      "required": false,
      "type": "dropdown",
      "description": "Default interval for statistic views",
      "default": "120m",
      "data": [
        {
          "title": "1 Minute",
          "value": "1m"
        },
        {
          "title": "10 Minutes",
          "value": "10m"
        },
        {
          "title": "20 Minutes",
          "value": "20m"
        },
        {
          "title": "2 Hours",
          "value": "120m"
        },
        {
          "title": "8 Hours",
          "value": "480m"
        }
      ]
    }
  ],
  "commands": [
    {
      "name": "systems",
      "title": "View Systems",
      "subtitle": "Beszel",
      "description": "View Systems and Containers",
      "mode": "view",
      "keywords": [
        "beszel",
        "systems",
        "containers"
      ]
    },
    {
      "name": "alerts",
      "title": "View Alerts",
      "subtitle": "Beszel",
      "description": "View all Alerts",
      "mode": "view",
      "keywords": [
        "beszel",
        "alerts"
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.89.1",
    "@raycast/utils": "^1.17.0",
    "pocketbase": "0.25.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.11",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "semantic-release": "24.2.1",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
